{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - mememaker
{% endblock %}

{% block content %}
<div class="row align-items-center">
        
        <div class="col-md-6 d-flex justify-content-center align-items-center">

            <form method="post" action="./meme" enctype="multipart/form-data">
                <div class="row">
                    <label for="file" class="upload d-flex justify-content-center align-items-center">Choisir une image</label>
                    <input id="file" type="file" name="fichier">
                </div>

                {% if message != '' %}
                    <div class="row d-flex justify-content-center ">{{ message }}</div>
                {% endif %}
                
                <div class="row d-flex justify-content-center mt-4">
                        <input class="btn" type="submit" value="Envoyer" name="submit">
                    </div>
            </form>

        </div>



        <div class="col-md-6 text-right">
        <h1 class="blue">Mememaker</h1>
        <h2>Generateur de memes</h2>
        
           
              <div class="row pt-3">
       {% for imagedefault in imagedefaults %}
            <div class="col-3"><a href="./meme/{{ imagedefault.ID }}"><img src="./assets/images/{{ imagedefault.NAME }}" width="100" heigh="100"></a></div>
           {% endfor %}
           
            </div>

        </div>
        
    </div>
{% endblock %}